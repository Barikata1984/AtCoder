#include <iostream>#include <algorithm>int main(){    std::string s;    std::cin >> s;    int n = s.size();        std::string t(n, '0'), u(n, '1');    std::cout << t << std::endl;    std::cout << u << std::endl;    for(int i = 1; i < n; ++i){        t.at(i) = (char)((t.at(i - 1) + 1) % 2);        u.at(i) = (char)((u.at(i - 1) + 1) % 2);    }    std::cout << t << std::endl;    std::cout << u << std::endl;    int tCount = 0, uCount = 0;    for(int i = 0; i < n; ++i){        if(s.at(i) != t.at(i)){            ++tCount;        }        if(s.at(i) != t.at(i)){            ++tCount;        }    }    std::cout << std::min(tCount, uCount) << std::endl;    return 0;}